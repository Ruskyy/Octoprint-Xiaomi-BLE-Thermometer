// Add this JavaScript code to your navbar_ble_thermometer.jinja2 template
<script>
$(function() {
    function updateNavbarData() {
        $.ajax({
            url: BASEURL + "plugin/bledata",  // Use the correct URL for your API endpoint
            type: "GET",
            dataType: "json",
            success: function(data) {
                $(".navbar-text.temperature").text("BLE Temp: " + data.temperature + "°C");
                $(".navbar-text.humidity").text("BLE Humidity: " + data.humidity + "%");
            }
        });
    }

    // Update data every 5 seconds (adjust the interval as needed)
    setInterval(updateNavbarData, 5000);
});
</script>


<span class="navbar-text">BLE Temp: {{ temperature }}°C</span>
<span class="navbar-text">BLE Humidity: {{ humidity }}%</span>